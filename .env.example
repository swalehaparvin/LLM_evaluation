# SafeGuardLLM Environment Configuration
# Copy this file to .env and fill in your actual values

# Application Configuration
NODE_ENV=production
PORT=5000

# Database Configuration
DATABASE_URL=postgresql://safeguard_user:safeguard_password@postgres:5432/safeguard_llm
PGHOST=postgres
PGPORT=5432
PGUSER=safeguard_user
PGPASSWORD=safeguard_password
PGDATABASE=safeguard_llm

# LLM Provider API Keys
# Get these from your respective provider dashboards
OPENAI_API_KEY=sk-your-openai-api-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here
GOOGLE_API_KEY=your-google-gemini-api-key-here

# Redis Configuration (optional)
REDIS_URL=redis://redis:6379

# Security Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-here
SESSION_SECRET=your-session-secret-key-here

# Email Configuration (for notifications - optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=/app/logs/safeguard.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Limits
MAX_FILE_SIZE=10485760

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5000,http://localhost:80